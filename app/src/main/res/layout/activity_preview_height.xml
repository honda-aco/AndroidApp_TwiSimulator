<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MenuLinearLarge"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageLeftArrow"
            android:layout_weight="1"
            android:src="@drawable/icon_leftarrow"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="25dp" />

        <TextView
            android:text="ツイート"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textHeader"
            android:textSize="18dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageSearch"
            android:layout_weight="1"
            android:src="@drawable/icon_search"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp" />

        <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/imageSetting"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/icon_setting"-->
            <!--android:layout_marginBottom="18dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_marginTop="18dp" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:elevation="0dp"
        android:background="@drawable/view_separate" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/scrollPreview"
        android:background="#e4ecef">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@android:color/white">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageAccountPV"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/linearMainPV">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:id="@+id/linearAcountPV">

                        <TextView
                            android:text="アカウント名"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:id="@+id/textAcountNamePV"
                            android:layout_weight="9"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            android:gravity="bottom"
                            android:maxLines="1"
                            tools:gravity="bottom"
                            android:layout_marginTop="15dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="10dp"
                            android:id="@+id/imageShare2"
                            android:layout_weight="1"
                            android:src="@drawable/icon_share2"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="25dp" />

                    </LinearLayout>

                    <TextView
                        android:text="＠名"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="16.5dp"
                        android:id="@+id/textAcountPV"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#adbac0"
                        android:gravity="top"
                        android:maxLines="1"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="29">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="本文"
                        android:id="@+id/textMainPV"
                        android:textSize="20.5dp"
                        android:textColor="@android:color/black"
                        android:singleLine="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:id="@+id/linearQuestion1PV">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="37dp"
                            android:id="@+id/imageQuestionLeft1"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="2dp" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:id="@+id/imageQuestionCenter1"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="2dp" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="37dp"
                                    android:id="@+id/imageQuestionRight1"
                                    android:layout_marginTop="13dp"
                                    android:layout_marginBottom="2dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:id="@+id/textQuestion1PV"
                                android:textSize="16.5dp"
                                android:text="アカウント名"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:layout_marginTop="13dp"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:id="@+id/textPercent1PV"
                            android:textSize="15dp"
                            android:text="100%"
                            android:textColor="@android:color/black"
                            android:gravity="right|center_vertical"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="2dp"
                            android:maxLines="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:id="@+id/linearQuestion2PV">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="37dp"
                            android:id="@+id/imageQuestionLeft2"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:id="@+id/imageQuestionCenter2"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="37dp"
                                    android:id="@+id/imageQuestionRight2"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:id="@+id/textQuestion2PV"
                                android:textSize="16.5dp"
                                android:text="アカウント名"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:id="@+id/textPercent2PV"
                            android:textSize="15dp"
                            android:text="100%"
                            android:textColor="@android:color/black"
                            android:gravity="right|center_vertical"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp"
                            android:maxLines="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:id="@+id/linearQuestion3PV">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="37dp"
                            android:id="@+id/imageQuestionLeft3"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:id="@+id/imageQuestionCenter3"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="37dp"
                                    android:id="@+id/imageQuestionRight3"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:id="@+id/textQuestion3PV"
                                android:textSize="16.5dp"
                                android:text="アカウント名"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:id="@+id/textPercent3PV"
                            android:textSize="15dp"
                            android:text="100%"
                            android:textColor="@android:color/black"
                            android:gravity="right|center_vertical"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp"
                            android:maxLines="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:id="@+id/linearQuestion4PV">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="37dp"
                            android:id="@+id/imageQuestionLeft4"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="0dp"
                                    android:layout_height="37dp"
                                    android:layout_weight="1"
                                    android:id="@+id/imageQuestionCenter4"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="37dp"
                                    android:id="@+id/imageQuestionRight4"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="2dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:id="@+id/textQuestion4PV"
                                android:textSize="16.5dp"
                                android:text="アカウント名"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="2dp"
                                android:maxLines="1" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:id="@+id/textPercent4PV"
                            android:textSize="15dp"
                            android:text="100%"
                            android:textColor="@android:color/black"
                            android:gravity="right|center_vertical"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="2dp"
                            android:maxLines="1" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="投票数"
                        android:id="@+id/textVotesCountPV"
                        android:textSize="14dp"
                        android:textColor="#adbac0"
                        android:gravity="center_vertical"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="2016年09月30日 17:19"
                        android:id="@+id/textUpdateDatePV"
                        android:textSize="14dp"
                        android:textColor="#adbac0"
                        android:gravity="center_vertical"
                        android:maxLines="1" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#FFe1e8eb"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:id="@+id/linearTweetActivity"
                        android:layout_height="43dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_activity"
                            android:id="@+id/imageActivity" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="ツイートアクティビティを表示"
                            android:id="@+id/textActivityPV"
                            android:textSize="13dp"
                            android:textColor="#adbac0"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:background="#FFe1e8eb"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearCountPV">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="43dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="2016"
                                android:id="@+id/textCountReTweetPV"
                                android:textSize="13.5dp"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:maxLines="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=" リツイート　"
                                android:textSize="12.5dp"
                                android:textColor="#adbac0"
                                android:gravity="center_vertical"
                                android:id="@+id/textReTweetPV" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="2016"
                                android:id="@+id/textCountFavoPV"
                                android:textSize="13.5dp"
                                android:textColor="@android:color/black"
                                android:gravity="center_vertical"
                                android:maxLines="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=" いいね"
                                android:textSize="12.5dp"
                                android:textColor="#adbac0"
                                android:gravity="center_vertical"
                                android:id="@+id/textFavoPV" />

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#FFe1e8eb"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:id="@+id/linearIconPV">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_reply"
                            android:id="@+id/imageIconReplyPV"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_retweet"
                            android:id="@+id/imageIconRetweetPV"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_favorite"
                            android:id="@+id/imageIconFavoritePV"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_mail"
                            android:id="@+id/imageIconMailPV"
                            android:layout_weight="1" />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:src="@drawable/icon_share"-->
                            <!--android:id="@+id/imageIconSharePV"-->
                            <!--android:layout_weight="1" />-->

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#FFe1e8eb"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="29">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAccountReply"
                android:text="あ"
                android:textColor="#adbac0"
                android:maxLines="1"
                android:textSize="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="7dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFe1e8eb"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>

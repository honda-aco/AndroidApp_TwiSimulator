<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MenuLinearLarge"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:id="@+id/flameImageIcon"
                    android:background="#FFe1e8eb">

                    <ImageView
                        android:layout_width="75dip"
                        android:layout_height="75dip"
                        android:id="@+id/imageAccount" />

                    <ImageView
                        android:layout_width="75dip"
                        android:layout_height="75dip"
                        android:id="@+id/imageAddMark"
                        android:src="@drawable/icon_add_mark" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/editAcountName"
                            android:inputType="textPersonName"
                            android:ems="10"
                            tools:gravity="bottom"
                            android:textColor="@android:color/black"
                            android:hint="アカウント名" />

                        <LinearLayout
                            android:id="@+id/textAcount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:text=" ＠"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#adbac0"
                                android:id="@+id/textViewv" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/editAccount"
                                android:inputType="textPersonName"
                                android:ems="10"
                                android:textColor="@android:color/black"
                                android:hint="名"
                                android:background="?android:attr/editTextBackground" />

                        </LinearLayout>

                 </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageFollow"
                android:layout_weight="1.5"
                android:visibility="invisible" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FFe1e8eb"/>

        <TextView
            android:text="【本文】"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editMain"
            android:textColor="@android:color/black"
            android:hint="本文" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FFe1e8eb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="【アンケート】"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_blue_dark" />

            <Space
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ToggleButton
                android:text="ToggleButton"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:id="@+id/toggleQuestion" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="　投票総数："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editVotes"
                android:textColor="@android:color/black"
                tools:gravity="center"
                android:hint="10000"
                android:layout_width="150dp" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#FFe1e8eb"/>

        <TextView
            android:text="【投稿日時】"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editUpdateYear"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:hint="2016" />

            <TextView
                android:text="年"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                 android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editUpdateMonth"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:hint="12" />

            <TextView
                android:text="月"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editUpdateDay"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:hint="31" />

            <TextView
                android:text="日"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editUpdateHour"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:hint="12" />

            <TextView
                android:text=":"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />

            <EditText
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editUpdateMinute"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:hint="30" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#FFe1e8eb"/>

            <TextView
                android:text="【レスポンス状況】"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:text="　RT数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editCountReTweet"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:hint="0" />

                <TextView
                    android:text="いいね数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editCountFavo"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:hint="0" />

            </LinearLayout>

            <Button
                android:text="表示"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPreview" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
